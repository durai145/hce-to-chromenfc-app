{
  "manifest_version": 2,
  "name": "HCE to Chrome NFC Sample",
  "version": "1.0.0",
  "minimum_chrome_version": "23",
  "permissions": [
    "usb",
    {
      "usbDevices": [ 
        { "vendorId": 1254, "productId": 21905 }, // SCL3711
        { "vendorId": 1839, "productId": 8704 }   // ACR122U
      ] 
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  }
}
